<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/ic_bg_login"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="176dp"
                android:layout_height="113dp"
                app:srcCompat="@drawable/ic_login"
                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:gravity="center"
                android:fontFamily="@font/segoeuib"
                android:text="Tekrar Hoş geldin!"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="45dp"
                android:gravity="center"
                android:fontFamily="@font/segoeui"
                android:text="Seni Tekrar Görmek Çok Güzel"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomEnd="35dp"
                app:boxCornerRadiusBottomStart="35dp"
                app:boxCornerRadiusTopEnd="35dp"
                app:boxCornerRadiusTopStart="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/loginemail"
                    android:lines="1"
                    android:inputType="textEmailAddress"
                    android:hint="E-Posta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                app:boxCornerRadiusBottomEnd="35dp"
                app:boxCornerRadiusBottomStart="35dp"
                app:boxCornerRadiusTopEnd="35dp"
                app:boxCornerRadiusTopStart="35dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="15dp"
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/loginpassword"
                    android:lines="1"
                    android:inputType="textPassword"
                    android:hint="Şifre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:gravity="right"
                android:fontFamily="@font/segoeuib"
                android:text="Şifremi Unuttum?"
                android:textColor="#4E4D4D"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="25dp"
                app:cardCornerRadius="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="25sp"
                    android:gravity="center"
                    android:fontFamily="@font/segoeuib"
                    android:textColor="#FFFFFF"
                    android:background="#08f"
                    android:text="Giriş Yap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <View
                android:background="@android:color/darker_gray"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="2dp"/>
            <TextView
                android:textSize="15sp"
                android:fontFamily="@font/segoeuib"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:text="VEYA"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@android:color/darker_gray"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/facebookPage"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@drawable/ic_logo_google"
                android:background="@drawable/logo_back" />
            <ImageView
                android:id="@+id/twitterPage"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@drawable/ic_logo_facebook"
                android:background="@drawable/logo_back" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <TextView
            android:fontFamily="@font/segoeuib"
            android:text="Hesabın Yokmu? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#08f"
            android:fontFamily="@font/segoeuib"
            android:text="Kayıt Ol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
